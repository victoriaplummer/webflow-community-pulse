---
import "../styles/globals.css";

interface Props {
  title?: string;
}

const { title = "Dashboard" } = Astro.props;
const currentPath = Astro.url.pathname;

// Helper to check if nav link is active
const isActive = (path: string) => {
  if (path === "/pulse" || path === "/pulse/") {
    return currentPath === "/pulse" || currentPath === "/pulse/";
  }
  return currentPath.startsWith(path);
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Community Signal & Opportunity Monitor" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}/favicon.svg`} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Community Pulse</title>
  </head>
  <body class="min-h-screen">
    <div class="relative flex min-h-screen flex-col">
      <!-- Header -->
      <header class="app-header">
        <div class="app-header-inner">
          <div class="mr-4 flex">
            <!-- Logo -->
            <a href="/pulse" class="app-logo">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="app-logo-icon"
              >
                <path d="M22 12h-4l-3 9L9 3l-3 9H2"></path>
              </svg>
              <span class="app-logo-text">Community Pulse</span>
            </a>
            
            <!-- Navigation -->
            <nav class="app-nav">
              <a
                href="/pulse"
                class:list={[
                  "app-nav-link",
                  { "app-nav-link--active": isActive("/pulse") && currentPath === "/pulse" }
                ]}
              >
                Dashboard
              </a>
              <a
                href="/pulse/insights"
                class:list={[
                  "app-nav-link",
                  { "app-nav-link--active": isActive("/pulse/insights") }
                ]}
              >
                Insights
              </a>
              <a
                href="/pulse/content"
                class:list={[
                  "app-nav-link",
                  { "app-nav-link--active": isActive("/pulse/content") }
                ]}
              >
                Content
              </a>
              <a
                href="/pulse/contributors"
                class:list={[
                  "app-nav-link",
                  { "app-nav-link--active": isActive("/pulse/contributors") }
                ]}
              >
                Contributors
              </a>
              <a
                href="/pulse/roundups"
                class:list={[
                  "app-nav-link",
                  { "app-nav-link--active": isActive("/pulse/roundups") }
                ]}
              >
                Roundups
              </a>
            </nav>
          </div>
        </div>
      </header>
      
      <!-- Main Content -->
      <main class="flex-1">
        <slot />
      </main>
      
      <!-- Footer -->
      <footer class="app-footer">
        <div class="app-footer-inner">
          <p class="app-footer-text">
            Community Signal & Opportunity Monitor - Internal Tool
          </p>
        </div>
      </footer>
    </div>
  </body>
</html>
